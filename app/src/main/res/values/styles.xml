<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ContactLabelTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|center_vertical</item>
    </style>

<style name="ContactTextView">
    <!-- Основные параметры -->
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:layout_marginBottom">8dp</item>
    <item name="android:textSize">16sp</item>
    
    <!-- Внешний вид текстового поля -->
    <item name="android:background">@drawable/textview_border</item>
    <item name="android:padding">12dp</item>
    <item name="android:textColor">@color/text_color_primary</item>
    <item name="android:hint">@string/contact_hint</item>
    
    <!-- Параметры ввода текста -->
    <item name="android:inputType">textCapWords</item>
    <item name="android:maxLines">1</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:imeOptions">actionNext</item>
    
    <!-- Дополнительные улучшения -->
    <item name="android:textCursorDrawable">@null</item> <!-- Убрать стандартный курсор -->
    <item name="android:textColorHint">#9E9E9E</item> <!-- Цвет подсказки -->
    <item name="android:lineSpacingExtra">4dp</item> <!-- Дополнительное пространство между строками -->
    <item name="android:fontFamily">sans-serif</item> <!-- Шрифт -->
    <item name="android:textStyle">normal</item> <!-- Стиль текста -->
    <item name="android:letterSpacing">0.05</item> <!-- Межбуквенное расстояние -->
    
    <!-- Анимация и взаимодействие -->
    <item name="android:focusable">true</item>
    <item name="android:focusableInTouchMode">true</item>
    <item name="android:clickable">true</item>
    <item name="android:longClickable">true</item>
</style>
</resources>
